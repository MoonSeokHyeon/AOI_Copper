                    <Grid  Grid.Row="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
                            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="40" Margin="10,0,0,0" Content="Ref Pos Save" Command="{Binding ResfPosSaveCommand}" FontSize="16" Cursor="Hand"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
                            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="10,0,0,0" Content="Save" Command="{Binding SaveDialogCommand}" FontSize="20"/>
