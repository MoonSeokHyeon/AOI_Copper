                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
                                    <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="40" Margin="10,0,0,0" Content="Save" Command="{Binding SaveDialogCommand}" FontSize="20" Cursor="Hand"/>
